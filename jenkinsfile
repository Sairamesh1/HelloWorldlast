pipeline {
    agent any
    tools {
        maven 'maven'
    }
    environment {
        TOMCAT_USER = 'ec2-user'
        TOMCAT_HOST = '3.110.204.230'
        TOMCAT_PATH = '/opt/apache-tomcat-9.0.91/webapps/' 
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', credentialsId: 'github', url: 'https://github.com/namagiriboobalan/HelloWorldlast.git'
            }
        }
 
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo "Archiving the  Artifacts"
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
 stage('Deploy') {
            steps {
                sshagent(['tomcat']) {
                    scp target/*.war ${TOMCAT_USER}@${TOMCAT_HOST}:${TOMCAT_PATH}"
                }
            }
        }
    }
}

